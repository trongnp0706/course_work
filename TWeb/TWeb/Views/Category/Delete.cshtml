@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient py-3 text-center">
        <h2 class="text-white">Delete Category</h2>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="mb-4">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                    <input asp-for="Name" disabled class="form-control shadow-sm" />
                </div>

                <div class="mb-4">
                    <label asp-for="DisplayOrder" class="form-label fw-bold">Display Order</label>
                    <input asp-for="DisplayOrder" disabled class="form-control shadow-sm" />
                </div>
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

            <partial name="_ValidationScriptsPartial" />
        </form>
    </div>
</div>


